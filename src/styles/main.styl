.color_editor
	width 232px
	padding 16px
	header
		width 100%
		overflow auto
		margin-bottom 10px

		.large_swatches
			border-radius 3px
			background-image url("../img/color_thumb_back.png")
			background-size 8px
			height auto
			width auto
			margin-right 9px
			floatleft
			overflow auto
			box-shadow 0 1px 0 #fff

		.large_swatch
			width 44px
			height 35px
			display block
			float left
			box-shadow inset 0 1px 0 rgba(0,0,0,.2)

		.current_color
			border-radius 3px 0px 0px 3px
			background-color rgba(0, 187, 255, .8)

		.last_color
			border-radius 0px 3px 3px 0px
			background-color #cccccc

