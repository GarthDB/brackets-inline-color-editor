	.sliders
		position relative
		clear both

	.gradient_overlay
		position absolute
		width 100%
		height 100%
		border-radius 3px

	.color_selection_field
		width 181px
		height 156px
		margin-right 13px
		display block
		border-radius 5px 3px 3px 3px
		position relative
		box-shadow 0 1px 0 #fff, inset 0 1px 0 rgba(0,0,0,.2)
		float left
		.saturation_gradient
			background-image -webkit-gradient(linear, 0% 50%, 100% 50%, from(white), to(rgba(255, 255, 255, 0)))
		.luminosity_gradient
			background-image -webkit-gradient(linear, 0% 0%, 0% 100%, from(transparent), to(black))
		.selector_base
			width 12px
			height 12px
			background-color #FFFFFF
			position absolute
			margin-bottom -8px
			margin-left -5px
		.selector
			width 19px
			height 19px
			position absolute
			left -4px
			top -4px
			background-image url("../img/grabber_color-well.png")
			

	.slider
		border-radius 3px
		width 12px
		height 156px
		margin-right 13px
		background-color #CCCCCC
		display block
		box-shadow 0 1px 0 #fff, inset 0 1px 0 rgba(0,0,0,.2)
		float left
		position relative
		.selector_base
			width 14px
			height 6px
			background-color transparent
			position absolute
			margin -1px -6px -4px -1px
		.selector
			width 20px
			height 12px
			left -3px
			top -3px
			position absolute
			background-image url("../img/grabber_color-slider.png")
		&.opacity_slider
			background-image url("../img/color_thumb_back.png")
			background-size 8px
			margin-right 0px

	.hue_slider
		background-image -webkit-linear-gradient(top, red, magenta, blue, cyan, lime, yellow, red)

	footer
		font-size 100%
		clear both
		vertical-align baseline
		*vertical-align middle
		line-height: normal
		padding-top 9px
		.color_value
			width 114px
			height 23px
			margin-right 6px
			background-color #AAAAAA
			box-sizing border-box
			display inline-block
			color #222
		input
			display inline-block;
			height 23px
			padding 0 0 0 4px
			border 1px solid rgba(0,0,0,.53)
			box-shadow:inset 0px 1px 0px rgba(0,0,0,.15)
			background rgba(255,255,255,.15)
			font-family "SourceSans"
			font-size: 12px
			color: rgba(255, 255, 255, .6)
			border-radius 3px
			margin: 1px 0 0 0
			vertical-align: middle
			&:focus
				background: rgba(255,255,255,.3)
				outline: none
				box-shadow: 0 0 8px rgba(0,0,0,.35), inset 0 2px 4px rgba(0,0,0,.15)
				border: 1px solid #1b1d1d
				z-index: 911
		.button-bar
			position relative
			top 2px

@media all and (-webkit-min-device-pixel-ratio : 2), (min-device-pixel-ratio : 2)
	.color_editor
		.large_swatches
			background-image url("../img/color_thumb_back@2x.png")
		.small_swatch
			background-image url("../img/color_thumb_back@2x.png")
		.color_selection_field
			.selector
				background-image url("../img/grabber_color-well@2x.png")
		.slider
			.selector
				background-image url("../img/grabber_color-slider@2x.png")
			&.opacity_slider
				background-image url("../img/color_thumb_back@2x.png")
@import button-bar